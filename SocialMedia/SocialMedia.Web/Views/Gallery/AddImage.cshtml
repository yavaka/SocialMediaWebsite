@{
    ViewData["Title"] = "AddImage";
}

<h1>AddImage</h1>

<form method="post" enctype="multipart/form-data" 
      asp-controller="Gallery" 
      asp-action="AddImage">
    <div class="form-group">
        <div class="col-md-10">
            <p>Upload one or more images using this form:</p>
            <input type="file" name="files" multiple />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            <input type="submit" value="Upload" />
        </div>
    </div>
</form>
