@model SocialMedia.Models.ViewModels.GroupViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit group</h1>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="@Model.Group.GroupId" />
            <div class="form-group">
                <label asp-for="@Model.Group.Title" class="control-label"></label>
                <input asp-for="@Model.Group.Title" class="form-control" />
                <span asp-validation-for="@Model.Group.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Group.Description" class="control-label"></label>
                <input asp-for="@Model.Group.Description" class="form-control" />
                <span asp-validation-for="@Model.Group.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

