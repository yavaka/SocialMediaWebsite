@model SocialMedia.Web.Models.CommentViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create Comment</h1>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-controller="Comments">
            <!--Comment model-->
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="@Model.Content" autocomplete="off" id="user-input" class="form-control" />
                <input type="hidden" asp-for="@Model.PostId" class="form-control" />
                <input type="hidden" asp-for="@Model.TaggedFriends" value="" id="tagged-users" />
                <span asp-validation-for="@Model.Content" class="text-danger"></span>
                <input type="hidden" asp-route="@Context.Request.Query["path"]" />
            </div>
            <!--Tag friends-->
            <div id="search-dropdown" class="dropdown-content" style="display: none;">
                <input id="search-input" type="text" autocomplete="off" placeholder="Search for user" onkeyup="getUsersByPartName()">
                <div id="results"></div>
            </div>
            <br />
            <div class="form-group">
                <button type="submit" onclick="assignTaggedUsers()" class="btn btn-primary">Create</button>
            </div>
        </form>
    </div>
</div>


@section Scripts 
{
    <script src="~/js/tag-friends.js"></script>
}
